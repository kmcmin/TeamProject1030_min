drop table tb_comments;
CREATE TABLE TB_COMMENTS(
    COMMENTS_NO NUMBER, 
    REPLY_NO NUMBER,
    TAGGED_USER VARCHAR2(300), 
    COMMU_NO NUMBER, 
    COMMENTS_CONTENT VARCHAR2(300),  
    COMMENTS_CLASS NUMBER,  
    USER_ID VARCHAR2(100), 
    COMMENTS_PARENT NUMBER,
    COMMENTS_CORRECTED  DATE, 
    COMMENTS_STATUS VARCHAR2(50), 
    COMMENTS_REGISTRATION DATE DEFAULT SYSDATE   
);
create SEQUENCE TB_COMMENTS_seq;